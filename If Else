package ifloops;
import java.util.*;
public class IfLoops {
    public static void main(String[] args) {
        int choice;
        System.out.println("Enter your age : ");
        Scanner s = new Scanner(System.in);
        choice = s.nextInt();
        if(choice > 25)
            System.out.println("You are an adult and you can vote");
        else if(choice >= 18)
            System.out.println("You are a major and you can vote");
        else
            System.out.println("You are not a major and you cannot vote");
    }
}
